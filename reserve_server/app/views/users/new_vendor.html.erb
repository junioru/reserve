<h1>Sign up new Vendor Account</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :mobile_number, "Mobile Number" %><br />
    <%= f.text_field :mobile_number %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Enter your password again" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.hidden_field :user_type, :value => "business" %>
  </div>
  <div class="field">
    <%= f.label :business_name, "Name of business/company" %> <br />
    <%= f.text_field :business_name %>
  </div>
  <div class="field">
    <%= f.label :business_category, "Business category" %> <br />
    <%= f.select :business_category, BUSINESS_CATEGORY  %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

